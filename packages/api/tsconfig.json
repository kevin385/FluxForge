{
  "compilerOptions": {
    "lib": ["esnext"],
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@fluxforge/core/*": ["../core/src/*", "../core/dist/src/*"]
    }
  },
  "references": [{ "path": "../core" }]
}
